<Window x:Class="PredictHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PredictHelper"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="MainWindow" Height="900" Width="1300">

    <Window.Resources>
        <local:MainViewModel x:Key="MainViewModel"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:BooleanValueInverter x:Key="Inverter" />
        <local:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </Window.Resources>

    <Grid DataContext="{StaticResource MainViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <Button Content="{Binding Path=ButtonPredicatesText}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Top"
                    Command="{Binding Command1}"/>

            <DataGrid ItemsSource="{Binding Path=Predicates, Mode=TwoWay}"
                      SelectedIndex="{Binding Path=PredicatesSelection}"
                      Visibility="{Binding Path=IsPredicatesEditing,
                                           Converter={StaticResource Inverter},
                                           ConverterParameter={StaticResource BoolToVis}}"
                      AutoGenerateColumns="False">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="DarkGray"/>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id предикта" 
                                        IsReadOnly="True"
                                        Binding="{Binding Path=Id}"/>
                    <DataGridTextColumn Header="Текст предикта" 
                                        Binding="{Binding Path=Text}"/>
                    <DataGridTextColumn Header="Совпадений" 
                                        Binding="{Binding Path=MatchesCount}"/>
                </DataGrid.Columns>
            </DataGrid>
            <ScrollViewer>
                <TextBox Text="{Binding PredicatesText}"
                         Visibility="{Binding Path=IsPredicatesEditing,
                                              Converter={StaticResource BoolToVis}}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  TextWrapping="NoWrap"
                  AcceptsReturn="True"/>
            </ScrollViewer>
        </DockPanel>
        <GridSplitter Grid.Column="1" 
                      ShowsPreview="False" 
                      Width="3"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Stretch" />
        <DockPanel Grid.Column="2"
                   Grid.Row="0">
            <TextBlock Text="{Binding Path=FoundResultsHeader}"
                       DockPanel.Dock="Top"/>
            <DataGrid ItemsSource="{Binding Path=FoundResults, Mode=TwoWay}"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Активен">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch" 
                                          IsChecked="{Binding Path=IsActive, 
                                                              Mode=TwoWay, 
                                                              UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Id документа" 
                                        IsReadOnly="True"
                                        Binding="{Binding Path=Id}"/>
                    <DataGridTextColumn Header="Заголовок документа" 
                                        IsReadOnly="True"
                                        Binding="{Binding Path=Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>