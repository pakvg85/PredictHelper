<Window x:Class="PredictHelper.MessageBoxDialog.MessageBoxDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PredictHelper.MessageBoxDialog"
        mc:Ignorable="d"
        Title="Добавьте новые предикаты (одна строка - один предикат)" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button Content="Добавить" 
                DockPanel.Dock="Bottom"
                Padding="20,3"
                Click="OKButton_Click" 
                HorizontalAlignment="Center"/>
        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <TextBox x:Name="ResponseTextBox" 
                 DockPanel.Dock="Top"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True"/>
        </ScrollViewer>
    </DockPanel>
</Window>